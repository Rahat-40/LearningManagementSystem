<section id="courses" class="py-20">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-green-600">Featured Courses</h2>
            <p class="text-gray-600 mt-2">Pick your next step towards success.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% courses.forEach(course => { %>
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition duration-300 border border-gray-100 flex flex-col h-full">
                    <div class="h-48 bg-gray-200 relative overflow-hidden group">
                        <div class="absolute inset-0 bg-gradient-to-br from-emerald-500 to-green-600 opacity-90 flex items-center justify-center text-white text-4xl font-bold group-hover:scale-110 transition duration-500">
                            <i class="fa-solid fa-book-open"></i>
                        </div>
                        <span class="absolute top-4 right-4 bg-yellow-400 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                            Course
                        </span>
                    </div>

                    <div class="p-6 flex-grow flex flex-col justify-between">
                        <div>
                            <h3 class="font-bold text-xl text-gray-800 mb-2 truncate"><%= course.title %></h3>
                            <p class="text-gray-500 text-sm line-clamp-3 mb-4"><%= course.description %></p>
                        </div>
                        
                        <div class="flex items-center justify-between mt-4 border-t pt-4">
                            <span class="text-2xl font-bold text-red-600">Tk <%= course.price %></span>
                            <a href="/course/<%= course._id %>" class="text-green-600 font-semibold hover:text-green-800 flex items-center">
                                View Details <i class="fa-solid fa-arrow-right ml-2 text-sm"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    
    </div>
</section>


<%- include("../partials/header") %>
<h1 class="text-4xl font-extrabold mb-8 text-gray-800 border-b pb-2">My Enrolled Courses</h1>

<% if (courses.length === 0) { %>
    <div class="text-center p-10 bg-white rounded-lg shadow-xl">
        <p class="text-xl text-gray-500">You haven't purchased any courses yet.</p>
        <a href="/learner/dashboard" class="mt-6 inline-block bg-blue-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-600 transition shadow-md">
            <i class="fa-solid fa-magnifying-glass mr-2"></i> Start Exploring Courses
        </a>
    </div>
<% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% courses.forEach(course => { %>
            <div class="bg-white p-6 shadow-xl rounded-xl border border-gray-200 flex flex-col justify-between hover:shadow-2xl transition duration-300">
                <div>
                    <h2 class="text-2xl font-semibold text-green-700 mb-2"><%= course.title %></h2>
                    <p class="text-gray-600 mb-4 line-clamp-3"><%= course.description %></p>
                </div>
                <div>
                    <a href="/learner/course/<%= course._id %>" class="mt-4 inline-block w-full bg-green-600 text-white px-5 py-2.5 rounded-lg hover:bg-green-700 transition duration-150 shadow-md text-center font-semibold transform active:scale-95">
                        <i class="fa-solid fa-play-circle mr-2"></i> Continue Learning
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>
<%- include("../partials/footer") %>
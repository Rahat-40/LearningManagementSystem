<%- include("../partials/header") %>
<%- include("../partials/alerts") %>
<h1 class="text-4xl font-extrabold mb-3 text-gray-800 border-b pb-2"><%= course.title %></h1>

<div class="mb-6 flex items-center gap-4">
    <% if (learnerCourse.completionStatus === 'COMPLETED') { %>
        <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full font-bold shadow-md">‚úÖ Completed (Score: <%= learnerCourse.quizScore %>%)</span>
        <a href="/learner/course/<%= course._id %>/certificate" class="text-yellow-600 font-semibold hover:underline flex items-center">
            <i class="fa-solid fa-trophy mr-2"></i> View Certificate
        </a>
    <% } else { %>
        <span class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full font-bold shadow-md">‚è≥ In Progress</span>
    <% } %>
</div>

<div class="bg-white p-6 shadow-2xl rounded-xl space-y-8 border border-gray-200">
    
    <h2 class="text-3xl font-bold text-green-600 border-b pb-3">Course Materials</h2>

    <% if (course.materials.text) { %>
        <div class="pb-4"><h3 class="font-bold text-xl mb-2 flex items-center"><i class="fa-solid fa-book-open text-green-600 mr-3"></i> Lecture Notes</h3><p class="text-gray-700 leading-relaxed bg-gray-50 p-4 rounded-lg border"><%= course.materials.text %></p></div>
    <% } %>
    
    <% if (course.materials.video) { %>
        <div class="pb-4"><h3 class="font-bold text-xl mb-2 flex items-center"><i class="fa-solid fa-video text-green-600 mr-3"></i> Video Lecture</h3><video controls src="<%= course.materials.video %>" class="w-full max-h-[500px] rounded-xl shadow-lg"></video></div>
    <% } %>
    
    <% if (course.materials.pdf) { %>
        <div class="pb-4"><h3 class="font-bold text-xl mb-2 flex items-center"><i class="fa-solid fa-file-pdf text-green-600 mr-3"></i> Downloadable PDF</h3><a href="<%= course.materials.pdf %>" target="_blank" class="text-blue-600 underline font-semibold hover:text-blue-800 flex items-center bg-blue-50 p-3 rounded-lg w-fit"><i class="fa-solid fa-download mr-2"></i> Click to Download Resource</a></div>
    <% } %>
    
    <% if (course.materials.audio) { %>
        <div class="pb-4"><h3 class="font-bold text-xl mb-2 flex items-center"><i class="fa-solid fa-headphones text-green-500 mr-3"></i> Audio Lecture</h3>
            <audio controls src="<%= course.materials.audio %>" class="w-full">
                Your browser does not support the audio element.
            </audio>
        </div>
    <% } %>
</div>

<div class="mt-8 bg-gray-100 p-6 rounded-xl border border-gray-200">
    <% if (learnerCourse.completionStatus === 'COMPLETED') { %>
        <div class="text-center">
            <h3 class="text-2xl font-bold text-green-700 mb-4">Course Completed! üéâ</h3>
            <div class="flex justify-center gap-4">
                <a href="/learner/course/<%= course._id %>/certificate" class="inline-block bg-yellow-500 text-white px-6 py-3 rounded-lg shadow hover:bg-yellow-600 transition font-semibold transform active:scale-95">üèÜ Download Certificate</a>
                <% if (course.materials.mcq && course.materials.mcq.length > 0) { %>
                    <form action="/learner/course/<%= course._id %>/retake" method="POST" class="inline-block">
                        <button type="submit" class="bg-red-500 text-white px-6 py-3 rounded-lg shadow hover:bg-red-600 transition font-semibold transform active:scale-95">üîÑ Retake Quiz (Improve Score)</button>
                    </form>
                <% } %>
            </div>
        </div>
    <% } else { %>
        <% if (course.materials.mcq && course.materials.mcq.length > 0) { %>
            <div id="quiz-start-area" class="text-center p-4">
                <h2 class="text-2xl font-bold mb-4 text-red-700">Ready for the Final Quiz?</h2>
                <p class="text-gray-600 mb-6">Score **50% or higher** to pass the course and earn your certificate.</p>
                <button id="start-quiz-btn" class="bg-blue-600 text-white px-10 py-4 rounded-lg text-lg font-extrabold hover:bg-blue-700 shadow-xl transition duration-150 transform hover:scale-[1.02] active:scale-95">
                    <i class="fa-solid fa-clipboard-check mr-2"></i> Start Final Assessment
                </button>
            </div>
            
            <div id="quiz-form-container" style="display:none;">
                <h2 class="text-2xl font-bold mb-6 text-red-700 border-b pb-3">üìù Final Assessment</h2>
                

                <form action="/learner/course/<%= course._id %>/quiz" method="POST" class="space-y-6">
                    <% course.materials.mcq.forEach((q, index) => { %>
                        <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200">
                            <p class="font-bold text-lg mb-4 text-gray-800"><%= index + 1 %>. <%= q.question %></p>
                            <% q.options.forEach(opt => { %>
                                <label class="block mt-2 p-2 rounded hover:bg-indigo-50 cursor-pointer transition">
                                    <input type="radio" name="question_<%= index %>" value="<%= opt %>" required class="mr-3 text-indigo-600 focus:ring-indigo-500"> <%= opt %>
                                </label>
                            <% }) %>
                        </div>
                    <% }) %>
                    <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 shadow-lg transform active:scale-95 mt-4">
                        <i class="fa-solid fa-paper-plane mr-2"></i> Submit Quiz & Complete Course
                    </button>
                </form>
            </div>
            
            <script>
                document.getElementById('start-quiz-btn').addEventListener('click', function() {
                    document.getElementById('quiz-start-area').style.display = 'none'; // Hide the button
                    document.getElementById('quiz-form-container').style.display = 'block'; // Show the quiz
                });
            </script>

        <% } else { %>
            <form action="/learner/course/<%= course._id %>/complete" method="POST" class="text-center">
                <p class="text-lg mb-4 text-gray-700">This course has no quiz. Mark it as complete when finished.</p>
                <button class="bg-green-600 text-white px-8 py-3 rounded-lg font-bold hover:bg-green-700 shadow-md transform active:scale-95">
                    <i class="fa-solid fa-check-double mr-2"></i> Mark Course Complete
                </button>
            </form>
        <% } %>
    <% } %>
</div>
<%- include("../partials/footer") %>
        <div class="w-4 h-4 bg-green-400 rounded-full absolute top-[20%] right-[15%] animate-bounce" style="animation-duration: 3s; animation-delay: 0.5s;"></div>
        <div class="w-3 h-3 bg-red-400 rounded-full absolute top-[50%] left-[5%] animate-bounce" style="animation-duration: 1.5s; animation-delay: 1s;"></div>

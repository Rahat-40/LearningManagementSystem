            <a href="/learner/my-course" class="inline-block w-full md:w-auto text-indigo-600 border-2 border-indigo-600 px-8 py-3 rounded-xl text-lg font-semibold hover:bg-indigo-50 transition duration-300">
                View My Courses
            </a>
        </div>
    </div>
</div>

<script>
    // Simple animation to make the card appear smoothly
    document.addEventListener('DOMContentLoaded', () => {
        const card = document.getElementById('success-card');
        setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'scale(1)';
        }, 50);
    });
</script>


<div class="container mx-auto px-6 mt-4">
    <% if (error && error.length > 0) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded shadow-md animate-pulse flex items-center justify-between">
            <div class="flex items-center">
                <i class="fa-solid fa-triangle-exclamation mr-3 text-xl"></i>
                <p class="font-medium"><%= error %></p>
            </div>
            <button onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900 font-bold text-2xl">&times;</button>
        </div>
    <% } %>

    <% if (success && success.length > 0) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded shadow-md flex items-center justify-between">
            <div class="flex items-center">
                <i class="fa-solid fa-circle-check mr-3 text-xl"></i>
                <p class="font-medium"><%= success %></p>
            </div>
            <button onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900 font-bold text-2xl">&times;</button>
        </div>
    <% } %>
</div>